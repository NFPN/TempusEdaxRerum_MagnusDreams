<UserControl x:Class="MagnusDreams.Views.Gameplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MagnusDreams.Views"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">
    <Grid>
        <Image x:Name="FundoGame" VerticalAlignment="Top" Source="/MagnusDreams;component/Images/Sky.jpg"/>

        <Canvas Name="GameCanvas" RenderTransformOrigin="0.5,0.5">
            <Image x:Name="PlayerImage" HorizontalAlignment="Left" Height="80" VerticalAlignment="Top" Width="120" Source="/MagnusDreams;component/Images/jogavel.png" Canvas.Left="77" Canvas.Top="316" Tag="Player"/>
            <Image x:Name="PlayerBullet" HorizontalAlignment="Left" Height="15" VerticalAlignment="Top" Width="15" Canvas.Left="36" Canvas.Top="351" Source="/MagnusDreams;component/Images/fundo.jpg" Stretch="Fill"/>
            <Image x:Name="Enemy" HorizontalAlignment="Left" Height="58" VerticalAlignment="Top" Width="64" Source="/MagnusDreams;component/Images/pause.png" Stretch="Fill" Canvas.Left="988" Canvas.Top="338" Tag="Enemy"/>
            <Image x:Name="Enemy_Copy" HorizontalAlignment="Left" Height="58" VerticalAlignment="Top" Width="64" Source="/MagnusDreams;component/Images/pause.png" Stretch="Fill" Canvas.Left="988" Canvas.Top="496" Tag="Enemy"/>
            <Image x:Name="Enemy_Copy1" HorizontalAlignment="Left" Height="58" VerticalAlignment="Top" Width="64" Source="/MagnusDreams;component/Images/pause.png" Stretch="Fill" Canvas.Left="988" Canvas.Top="142" Tag="Enemy"/>
            <Image x:Name="Enemy_Copy2" HorizontalAlignment="Left" Height="58" VerticalAlignment="Top" Width="64" Source="/MagnusDreams;component/Images/pause.png" Stretch="Fill" Canvas.Left="988" Canvas.Top="244" Tag="Enemy"/>
            <Image x:Name="Enemy_Copy3" HorizontalAlignment="Left" Height="58" VerticalAlignment="Top" Width="64" Source="/MagnusDreams;component/Images/pause.png" Stretch="Fill" Canvas.Left="988" Canvas.Top="401" Tag="Enemy" RenderTransformOrigin="0.5,0.5"/>
        </Canvas>
        <Label x:Name="Log" Content="testsadf" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Height="69" VerticalAlignment="Top" Width="1270" Margin="0,48,0,0" FontSize="20"/>
    </Grid>
</UserControl>
